package org.example;
import java.util.ArrayList;
import java.util.List;

public class NumberOperations {
    public static void main(String[] args) {
        List<Number> numbers = new ArrayList<>();

        numbers.add(10);
        numbers.add(20.5);
        numbers.add(30);
        numbers.add(40.7);
        numbers.add(50);
        numbers.add(60.3);
        numbers.add(70);
        numbers.add(80.1);
        numbers.add(90);
        numbers.add(100.9);

        System.out.println("Всі числа: " + numbers);

        List<Integer> integerNumbers = new ArrayList<>();
        List<Double> doubleNumbers = new ArrayList<>();

        for (Number number : numbers) {
            if (number instanceof Integer) {
                integerNumbers.add((Integer) number);
            } else if (number instanceof Double) {
                doubleNumbers.add((Double) number);
            }
        }

        System.out.println("Цілі числа: " + integerNumbers);
        System.out.println("Дробові числа: " + doubleNumbers);

        double sum = 0;
        for (Number number : numbers) {
            sum += number.doubleValue();
        }
        double average = sum / numbers.size();
        System.out.println("Середнє значення: " + String.format("%.2f", average));
    }
}
